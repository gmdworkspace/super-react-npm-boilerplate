{
  "name": "super-react-npm-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "build/bundle.js",
  "scripts": {
    "lint": "eslint './{src,test}/**/*.{js,jsx}'",
    "lint:fix": "eslint --fix './{src,test}/**/*.{js,jsx}'",
    "test:unit": "NODE_ENV=test jest test",
    "test": "npm-run-all lint test:unit build",
    "build": "webpack -p",
    "component:create": "./generator/component/create.sh",
    "component:delete": "./generator/component/delete.sh",
    "setup": "chmod +x generator/setup/setup.sh && ./generator/setup/setup.sh",
    "start:dev": "start-storybook -p 9095"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gmdworkspace/super-react-npm-boilerplate.git"
  },
  "keywords": [],
  "author": "Dinesh GM",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.6.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.2.1",
    "@storybook/addon-links": "^5.2.1",
    "@storybook/addon-viewport": "^5.2.1",
    "@storybook/addons": "^5.2.1",
    "@storybook/react": "^5.2.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-webpack-alias": "^2.1.2",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-react": "^7.8.1",
    "ignore-styles": "^5.0.1",
    "jest": "^24.9.0",
    "jsdom": "^11.10.0",
    "json": "^10.0.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.1",
    "sass-loader": "^7.0.3",
    "storybook-addon-jsx": "^7.1.6",
    "style-loader": "^0.21.0",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^.*[.](style|scss)$": "<rootDir>/test/setup/file-mock.js"
    },
    "setupFiles": [
      "./test/setup/jsdom.js",
      "./test/setup/enzyme.js"
    ],
    "testURL": "http://localhost",
    "globals": {
      "window": true
    },
    "testPathIgnorePatterns": [
      "/test/setup"
    ]
  }
}
